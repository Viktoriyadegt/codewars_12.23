
//========================1 way==================================

function hello(name) {
    !name
    ?name='World'
       :name=name[0].toUpperCase() + name.slice(1).toLowerCase()
  return `Hello, ${name}!`;
}

console.log(hello('john'))

//========================2 way==================================

function hello(name) {
    return `Hello, ${name ? name[0].toUpperCase() + name.slice(1).toLowerCase() : "World"}!`
  }
  