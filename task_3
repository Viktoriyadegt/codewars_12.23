//========================1 way==================================
function reverseSeq(n) {
    if (n < 1) {
      return [];
    } else {
      const countArray = reverseSeq(n - 1);
      countArray.unshift(n);
      return countArray;
    }
  }
  console.log(reverseSeq(5));

  //========================2 way==================================

  const reverseSeq = n => {
    let arr = [];
      for (let i=n; i>0; i--) {
        arr.push(i);
        } return arr;
    };
